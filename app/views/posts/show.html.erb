<section>
  <div class="border border-5 p-1 mb-3">
    <div class="d-flex justify-content-between align-items-center">
      <h2>
        <%= @post.title %> #<%= @post.id %> by <%= @user.name %>
      </h2>
      <div>
        <span>Comments: <%= @post.comments_counter %></span>
        <span>, Likes: <%= @post.likes_counters %></span>
       <%= button_to "Like", user_post_likes_path(@user, @post), method: :post %>
      </div>
    </div>
    <div>
      <%= @post.text %>
    </div>
  </div>

  <div class="border border-5 p-1 mb-3">
  <% @post.recent_comments.each do |comment| %>
      <div class="mt-3">
        <span><%= comment.author.name %>:</span>
        <span><%= comment.text %></span>
      </div>
    <% end %>
  </div>
  <div class="text-center p-4">
    <%= link_to 'Create a Comment', new_user_post_comment_path(@post.author, @post), class: 'btn' %>
  </div>
</section>